{
    "machine": {
        "host": "$host",
        "username": "$username",
        "password": "$password"
    },
    "commands": [
        "sudo apt-get update",
        "curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -",
        "sudo apt-get install -y nodejs",

        "npm --prefix /opt/base-service install",
        "docker stop base-service",
        "docker rm base-service",
        "docker build --no-cache -t base-service /docker-uploads/base-service",
        "docker run -d -p 8080:3000 --name base-service -v /logs:/logs -v /opt/base-service:/opt/base-service -t base-service"
    ],
    "directories": [
        {
            "source": "$workspace/src",
            "destination": "/opt/base-service/src"
        }
    ],
    "files": [
        {
            "source": "$workspace/package.json",
            "destination": "/opt/base-service/package.json"
        },
        {
            "source": "$workspace/Dockerfile",
            "destination": "/docker-uploads/base-service/Dockerfile"
        }
    ]
}